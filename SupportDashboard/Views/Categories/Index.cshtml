@model List<SupportDashboard.BusinessLogic.Models.Category>

@{
    ViewBag.Title = "Categoty Page";
}

<h3>Categories list</h3>

<table class="table-bordered" width="500" height="100">
    <tr>
        <td></td>
        <td>Category</td>
        <td>CategoryID</td>
        <td></td>
    </tr>

    @if (Model != null && Model.Any())
    {
        foreach (var category in Model)
        {
            <tr>
                <td>@Html.ActionLink("Update", "Update", "Categories", new { id = category.Id }, null)</td>
                <td>@category.Title</td>
                <td>@category.Id</td>
                <td>@Html.ActionLink("Delete", "Delete", "Categories", new { id = category.Id }, null)</td>
            </tr>
        }
    }
</table>

@Html.ActionLink("Add", "Add", "Categories")
@model List<SupportDashboard.BusinessLogic.Models.Task>

@{
    ViewBag.Title = "Tasks";
}

<h2 class="h2">Tasks</h2>

<div class="row">
    <div class="col-md-6">
        @if (Model != null && Model.Any())
        {
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Task</th>
                    <th>Decription</th>
                    <th colspan="2">Category</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model)
                {
                    string category = "Not spacified";

                        foreach (var item in ViewBag.Category)
                        {
                            if (item.Id == task.CategoryId)
                            {
                                category = item.Title;
                            }

                        }

                        <tr>
                            <td>@task.Title</td>
                            <td>@task.Decription</td>
                            <td>@category</td>
                            <td>
                                <div class="pull-right">
                                    @Html.ActionLink("Update", "Update", "Tasks", new { id = task.Id }, new { @class = "btn btn-primary" })
                                    @Html.ActionLink("Delete", "Delete", "Tasks", new { id = task.Id }, new { @class = "btn btn-danger" })
                                </div>
                            </td>
                        </tr>
                 }
            </tbody>
        </table>
        }
        else
        {
            <p class="text-center"><b>Nothing found</b></p>
        }
        @Html.ActionLink("Add", "Add", "Tasks", null, new { @class = "btn btn-primary" })
    </div>
</div>


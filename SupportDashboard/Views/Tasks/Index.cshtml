@model List<SupportDashboard.BusinessLogic.Models.Task>

@{
    ViewBag.Title = "Tasks Page";
}

<h3>Task list</h3>

<table class="table-bordered" width="500" height="100">
    <tr>
        <td></td>
        <td>Task</td>
        <td>Decription</td>
        <td>Category</td>
        <td></td>
    </tr>

    @if (Model != null && Model.Any())
    {
        foreach (var task in Model)
        {
            <tr>
                <td>@Html.ActionLink("Update", "Update", "Tasks", new { id = task.Id }, null)</td>
                <td>@task.Title</td>
                <td>@task.Decription</td>

                @{foreach (var category in ViewBag.Category)
                    {
                        if (category.Id == task.CategoryId)
                        {
                            <td>@category.Title</td>
                        }
                    }
                }
                <td>@Html.ActionLink("Delete", "Delete", "Tasks", new { id = task.Id }, null)</td>
            </tr>
        }
    }
</table>

@Html.ActionLink("Add", "Add", "Tasks")
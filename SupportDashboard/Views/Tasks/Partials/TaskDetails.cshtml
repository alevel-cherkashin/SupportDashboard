@model SupportDashboard.BusinessLogic.Models.Task


<div class="form-group">
    <label for="task-title" class="contol-label">Task Name</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @id = "task-title" })
</div>

<div class="form-group">
    <label for="task-description" class="contol-label">Task Description</label>
    @Html.TextAreaFor(x => x.Decription, new { @class = "form-control", @id = "task-description" })
</div>

<div class="form-group">
    <label for="task-category" class="contol-label">Task Category</label>
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.Select, "None", new { @class = "form-control", @id = "task-category" })
</div>